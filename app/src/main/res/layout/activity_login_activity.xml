<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/logo2"
    tools:context="br.com.sistemasecia.contato.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etSenha"
        android:hint="Senha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btEntrar"
        android:layout_below="@+id/cbAtualizaContatos"
        android:layout_alignLeft="@+id/cbAtualizaContatos"
        android:layout_alignStart="@+id/cbAtualizaContatos" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar contatos"
        android:id="@+id/cbAtualizaContatos"
        android:layout_alignTop="@+id/etSenha"
        android:layout_alignLeft="@+id/etSenha"
        android:layout_alignStart="@+id/etSenha"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:id="@+id/btSenha"
        android:layout_alignTop="@+id/btEntrar"
        android:layout_toRightOf="@+id/btEntrar"
        android:layout_toEndOf="@+id/btEntrar" />


</RelativeLayout>
