<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="br.com.sistemasecia.contato.ListaContatoActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:id="@+id/etContato"
        android:hint="Contato"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lvContatos"
        android:layout_alignEnd="@+id/lvContatos" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvContatos"
        android:layout_below="@+id/etContato"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
